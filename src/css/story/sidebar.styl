.sidebar
	position relative
	padding 1rem
	background-color $bg-darker
	margin-top $header-height
	max-width $sidebar-width
	box-shadow 0 2px 7px 1px rgba($fg, 0.25)
	transition transform 500ms ease-in-out
	&.is-hidden
		transform translate($sidebar-width * -1, 0)
	+mq('bp-m')
		overflow hidden

		&.is-hidden
			transform translate(0, 0)
	
  .btn--about
		display block
		set-type-size(medium, true)
		border none
		text-align left
		padding 0
		margin-top 3rem
		&:hover
			color $fg-lighter
			background-color transparent
			svg
				stroke $fg-lighter
		span
			margin-right 0.25rem
			svg
				stroke $fg
				width 1.5rem
				transform translateY(20%)
		+mq('bp-m')
			display none

	ul
		display flex
		flex-wrap wrap
		justify-content space-between

	li
		width 50%
		padding 0.5rem 0
		&:nth-child(even)
			padding-left 0.25rem
		&:nth-child(odd)
			padding-right 0.25rem

	button
		width 100%
		set-type-size(small)


	.nav__title
		margin 0
		margin-top 2rem
		margin-bottom 0.5rem
		font-weight 700
		text-transform uppercase
		line-height 1
		color $fg
		span
			text-transform none
			color $fg-lighter
			font-weight 500
			margin-left 0.5rem
			set-type-size(small, false)

	.nav__slider
		margin-right 1rem
		margin-left 0.25rem
		margin-top 1rem
		margin-bottom 3rem

	.info__hed
		font-weight 700
		set-type-size(large, false)
		line-height 1.2
		margin 0
		margin-top 1rem
		color $fg-lightest
		span
			display block
			font-size 58px
			line-height 0.9
			text-transform uppercase
			color $fg
			margin-bottom 0.25rem

	.info__text
		margin-top 1rem

		p
			margin 0.75rem auto
			set-type-size(root, true)

	.text__video button
		border none
		padding 0
		display block
		text-align left
		line-height 1
		font-weight 700
		text-transform uppercase
		color $fg
		set-type-size(small, true)
		&:hover
			background transparent
			color $fg-lighter
			svg
				stroke $fg-lighter
		svg
			width 1.25rem
			vertical-align middle
			margin-left 0.25em
			stroke $fg
			transform translateY(-5%)


	.sidebar__credit
		margin-top 1rem
		a
			&:hover
				color $fg-lighter
				border-bottom 1px solid $fg-lighter
		+mq('bp-m')
			margin-top 4rem

