button.sidebar__toggle
	position fixed
	box-shadow 3px 0 7px -2px rgba($fg, 0.25)
	background-color $bg-darker
	border none
	top 50%
	left $sidebar-width - 0.25
	z-index set-index(overlay)
	width 2.75rem
	height 2.75rem
	transition transform 500ms ease-in-out
	&.is-hidden
		transform translate($sidebar-width * -1, 0)
	+mq('bp-m')
		display none
	&:hover
		background-color $bg-darker
	span
		display none
		&.is-visible
			display block
	svg
		stroke $fg

  +mq('bp-m')
		display none
