.sidebar
	position relative
	max-width $sidebar-width
	padding 1rem
	background-color $bg-darker
	margin-top $header-height

	ul
		display flex
		flex-wrap wrap
		justify-content space-between
	
	li
		width 50%
		padding 0.5rem 0
		&:nth-child(even)
			padding-left 0.25rem
		&:nth-child(odd)
			padding-right 0.25rem
	
	button
		width 100%
		set-type-size(small)
		

	.nav__title
		margin 0
		margin-top 2rem
		margin-bottom 0.5rem
		font-weight 700
		text-transform uppercase
		line-height 1
		span
			text-transform none
			color $fg-lighter
			font-weight 500
			margin-left 0.5rem
			set-type-size(small, false)
	
	.nav__slider
		margin-right 1rem
		margin-left 0.25rem
		margin-top 1rem
		margin-bottom 3rem
	
	.info__hed
		font-weight 700
		set-type-size(large, false)
		line-height 1.2
		margin 0
		margin-top 1rem
		color $fg-lightest
		span
			display block
			font-size 58px
			line-height 0.9
			text-transform uppercase
			color $fg
			margin-bottom 0.25rem
		
	.info__text
		margin-top 1rem
		
		p
			margin 0.75rem auto
			set-type-size(root, true)
	
	.text__video button
		border none
		padding 0
		display block
		text-align left
		line-height 1
		font-weight 700
		text-transform uppercase
		set-type-size(small, true)
		&:hover
			background transparent
			color $fg-lighter
		svg
			width 1.25rem
			vertical-align middle
			margin-left 0.25em
			transform translateY(-5%)


	.sidebar__credit
		margin-top 3rem
