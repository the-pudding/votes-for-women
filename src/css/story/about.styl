.section__about
	cursor pointer
	background-color rgba($bg, 0.95)
	z-index set-index(overlay)
	display flex
	flex-direction column
	justify-content center

	a
		&:hover
			color $fg-lighter
			border-bottom 1px solid $fg-lighter

	.about__content, .about__exhibit, .about__collab
		margin 0 auto
		max-width $column-width
		width 90%
		margin-bottom 2rem
		+mq('bp-m')
			border-top 2px solid $fg-lightest

	.about__exhibit
		display flex
		align-items center
		padding-top 1rem
		& > *
			&:first-child
				margin-right 1rem
				width 40%
			&:last-child
				width 60%
				margin-left 1rem

		.exhibit__title
			font-weight 700

	.about__collab
		display none
		align-items center
		justify-content space-between
		padding-top 1rem
		+mq('bp-m')
			display flex
		svg
			height 5rem


	.about__close
		border none
		position absolute
		top 0.25em
		right 0.25em
		&:hover
			background transparent
