.section__graphic
	
	.graphic__platforms
		display flex
		height 100%
		transition transform 1s ease-in-out

	.year
		position relative
		margin-left 4rem
		margin-top 2rem
		margin-bottom 4rem
		border-left 2px solid $bg-darkest

	.hed
		margin 0
		position absolute
		transform-origin 50% 100%
		transform rotate(-90deg) translateY(-2.5rem)
		font-weight 700
		set-type-size(x-large, false)

	.parties
		display flex

	.party
		margin 0 2rem
		width 10rem
		
		.grafs
			display flex
			flex-wrap wrap
			flex-direction clumn
			align-items flex-start
			
		.graf
			width 100%
			background $bg-darker
			margin 0
			&.is-issue
				background-color $primary

	.info
		transform translateY(-0.5rem)
		padding-bottom 1rem

	.info p
		margin 0
		color $fg-lighter
		line-height 1.2
		set-type-size(small)

		span
			border-bottom 2px solid $primary

		&.party-name
			set-type-size(large)
			font-weight 700
			color $fg

	.graphic__nav
		position absolute
		bottom 0
		left 0
		width 100%
		height 3rem
		display flex
		justify-content flex-end
		padding-right 1rem
		padding-bottom 1rem
		z-index set-index(overlay)
		button
			padding 0
			line-height 1
			text-transform uppercase
			font-weight 700
			set-type-size(small, false)
			margin 0 0.5rem
			width 7rem
			text-align center
		svg
			vertical-align middle
			width 1rem
			transform translateY(-2.5%)
		


