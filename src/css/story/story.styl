/* CUSTOM STORY STYLE */

body
	font-family $sans
	
section
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	overflow hidden
	+mq('bp-m')
		padding-left $sidebar-width

	&.is-hidden
		pointer-events none
		visibility hidden


.mainbar
	position fixed
	top 0
	left 0
	width 100%
	margin-top $header-height
	transform translate3d(0,0,0)
	opacity 0.33
	&.is-visible
		opacity 1
	+mq('bp-m')
		opacity 1

button
	background-color transparent
	border 1px solid $fg
	padding 0.5em
	font-family $sans
	font-weight 500
	&:hover
		background-color $bg-darkest
	&.is-active
		background-color $fg-lighter
		color $bg
		font-weight 700
		letter-spacing 0.03em
	
