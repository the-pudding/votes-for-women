/* CUSTOM STORY STYLE */

body
	font-family $sans
	
section
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	padding-left $sidebar-width
	overflow hidden
	&.is-hidden
		pointer-events none
		visibility hidden


.mainbar
	position fixed
	top 0
	left 0
	width 100%
	margin-top $header-height
	transform translate3d(0,0,0)

button
	background-color transparent
	border 1px solid $fg
	padding 0.5em
	font-family $sans
	font-weight 500
	&:hover
		background-color $bg-darkest
	&.is-active
		background-color $fg-lighter
		color $bg
		font-weight 700
	
